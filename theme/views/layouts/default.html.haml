%html(html_attrs())
  %head= render_partial("layouts/head")
  - $body_class = implode( " ", get_body_class())
  %body{:class => "#{$body_class}"}
    .page-wrapper
      %header.site-header= render_partial("layouts/header")
      %navigation.site-navigation = render_partial("layouts/navigation")
      %section.site-content= yield()
      .push
    %footer.site-footer= render_partial("layouts/footer")
    = javascript_include_tag("application")
